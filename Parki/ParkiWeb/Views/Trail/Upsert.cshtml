@model ParkiWeb.Models.ViewModels.TrailVM
@{
    var title = "Create Trail ";

}
<form method="post" asp-action="Upsert" >

    <div class="row px-2 mx-2 backgroundWhite border">

        @if (Model.Trail.Id != 0) //Request to update
        {
            <input type="hidden" asp-for="Trail.Id" />
            title = "Edit Trail";
        }
        <div class="col-12 p-3">
            <h2 class="text-primary">@title</h2>
        </div>
        <div class="col-8">

            <div class="form-group row">
                <div class="col-4">
                    National Park
                </div>
                <div class="col-8">
                    @Html.DropDownListFor(m => m.Trail.NationalParkID, Model.NationalParkList,
                   "Please select park",
                   new { @Class = "form-control" })

                    <span asp-validation-for="Trail.NationalParkID" class="text-danger"></span> @*Client side Validation example*@
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Trail.Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Trail.Name" class="form-control" />
                    <span asp-validation-for="Trail.Name" class="text-danger"></span>@*Client side Validation example*@
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Trail.Difficulty"></label>
                </div>
                <div class="col-8">
                    <select asp-for="Trail.Difficulty"
                            asp-items="Html.GetEnumSelectList<Trail.DifficultyType>()"
                            class="form-control"></select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Trail.Distance"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Trail.Distance" class="form-control" />
                    <span asp-validation-for="Trail.Distance" class="text-danger"></span>
                </div>
            </div>


            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Trail.Elivation"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Trail.Elivation" class="form-control" />
                    <span asp-validation-for="Trail.Elivation" class="text-danger"></span>
                </div>
            </div>


            <div class="form-group row">
                <div class="col-4 offset-4">
                    <button type="submit" class="btn btn-primary form-control">
                        @(Model.Trail.Id != 0 ? "Update" : "Create")
                    </button>
                </div>
                <div class="col-4">
                    <a asp-action="Index" class="btn btn-success form-control">Back to List</a>
                </div>
            </div>


        </div>

    </div>

</form>



